<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    style="@style/NestedScrollBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.techware.lataxidriverapp.activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:paddingTop="50dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_splash"/>


        <in.techware.lataxidriverapp.widgets.CustomEditText
            android:id="@+id/etxt_forgot_password_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:ems="30"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_hint"/>


        <View
            android:layout_marginBottom="5dp"
            style="@style/RegistrationItemUnderline"/>


        <in.techware.lataxidriverapp.widgets.CustomButton
            android:id="@+id/btn_forgot_password_reset"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_click_app_rectangle_with_semicircle_edge"
            android:onClick="onForgotPasswordResetClick"
            android:text="@string/btn_reset"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"/>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
