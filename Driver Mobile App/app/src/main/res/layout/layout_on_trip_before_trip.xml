<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/lyt_on_trip_before_trip"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom|center_horizontal"
	android:orientation="vertical">
	
	
	<android.support.v7.widget.CardView
		android:id="@+id/card_on_trip_before_trip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="45dp"
		android:background="@color/transparent"
		android:minHeight="120dp"
		app:cardBackgroundColor="@color/transparent"
		app:cardElevation="4dp">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:gravity="center"
			android:orientation="vertical"
			android:paddingBottom="20dp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingTop="45dp"
			android:visibility="visible">
			
			
			<in.techware.lataxidriverapp.widgets.CustomTextView
				android:id="@+id/txt_on_trip_before_trip_customer_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:text="@string/sample_name"
				android:textAllCaps="true"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/text_red_3"
				android:textStyle="bold" />
			
			<LinearLayout
				android:id="@+id/ll_on_trip_before_trip_confirm_arrival"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="10dp"
				android:background="@drawable/btn_click_green_2_rectangle_with_semicircle_edge"
				android:gravity="center"
				android:minHeight="40dp"
				android:minWidth="200dp"
				android:onClick="onOnTripConfirmArrivalClick"
				android:orientation="horizontal"
				android:paddingLeft="30dp"
				android:paddingRight="30dp">
				
				<in.techware.lataxidriverapp.widgets.CustomTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:text="@string/btn_confirm_you_have_arrived"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@color/white"
					android:textSize="12sp"
					android:textStyle="bold" />
				
				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:scaleType="centerInside"
					app:srcCompat="@drawable/ic_action_tick" />
			
			
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/ll_on_trip_before_trip_start"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="10dp"
				android:background="@drawable/btn_click_green_2_rectangle_with_semicircle_edge"
				android:gravity="center"
				android:minHeight="40dp"
				android:minWidth="200dp"
				android:onClick="onOnTripStartTripClick"
				android:orientation="horizontal"
				android:paddingLeft="30dp"
				android:paddingRight="30dp">
				
				<in.techware.lataxidriverapp.widgets.CustomTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:text="@string/btn_start_trip"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@color/white"
					android:textStyle="bold" />
				
				<ImageView
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:scaleType="centerInside"
					app:srcCompat="@drawable/ic_action_tick" />
			
			
			</LinearLayout>
		
		
		</LinearLayout>
	
	</android.support.v7.widget.CardView>
	
	<android.support.v7.widget.CardView
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_gravity="center"
		app:cardCornerRadius="35dp"
		app:cardElevation="5dp"
		app:layout_anchor="@+id/card_on_trip_before_trip"
		app:layout_anchorGravity="top|center_horizontal">
		
		<ImageView
			android:id="@+id/iv_on_trip_before_trip_profile_photo"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:background="@drawable/circle_carbon_transparent"
			android:src="@drawable/ic_profile_photo_default" />
	
	</android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>