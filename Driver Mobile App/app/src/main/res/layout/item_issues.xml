<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="70dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerInside"
        android:tint="@color/text_1"
        app:srcCompat="@drawable/ic_issues"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <in.techware.lataxidriverapp.widgets.CustomTextView
            android:id="@+id/txt_item_issues_issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/sample_issue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_4"/>

        <in.techware.lataxidriverapp.widgets.CustomTextView
            android:id="@+id/txt_item_issue_customer_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/sample_issue"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_2"/>

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:rotation="180"
        android:scaleType="centerInside"
        android:tint="@color/text_hint"
        app:srcCompat="@drawable/ic_toolbar_back"/>

</LinearLayout>