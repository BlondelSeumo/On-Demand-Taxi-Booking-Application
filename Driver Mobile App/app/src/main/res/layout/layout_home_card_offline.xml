<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_home_card_offline"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">


    <in.techware.lataxidriverapp.widgets.CustomTextView
        android:id="@+id/txt_home_card_offline_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/iv_home_card_offline_arrow"
        android:layout_toStartOf="@+id/iv_home_card_offline_arrow"
        android:text="@string/label_your_todays_total_rides"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_home_card_offline_label"
        android:layout_alignRight="@+id/txt_home_card_offline_label"
        android:gravity="bottom"
        android:visibility="invisible"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/txt_home_card_offline_label"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/iv_home_card_offline_arrow"
        android:layout_toStartOf="@+id/iv_home_card_offline_arrow"
        android:orientation="horizontal">

        <in.techware.lataxidriverapp.widgets.CustomTextView
            android:id="@+id/txt_home_card_offline_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/sample_fare"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_red_2"
            android:textStyle="bold"/>

        <in.techware.lataxidriverapp.widgets.CustomTextView
            android:id="@+id/txt_home_card_offline_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:text="@string/sample_online_time"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_3"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_home_card_offline_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:rotation="180"
        android:scaleType="centerInside"
        android:tint="@color/text_3"
        app:srcCompat="@drawable/ic_toolbar_back"/>

</RelativeLayout>