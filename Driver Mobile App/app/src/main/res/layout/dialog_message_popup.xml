<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_margin="10dp"
	android:background="@color/white"
	android:elevation="5dp"
	android:gravity="center_vertical"
	android:minWidth="250dp"
	android:orientation="vertical"
	android:paddingLeft="16dp"
	android:paddingTop="16dp"
	android:paddingRight="16dp"
	android:paddingBottom="12dp"
	app:cardBackgroundColor="@color/white"
	app:cardCornerRadius="3dp">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		
		<in.techware.lataxidriverapp.widgets.CustomTextView
			android:id="@+id/txt_dialog_message_popup"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:background="@android:color/transparent"
			android:gravity="top|left"
			android:isScrollContainer="true"
			android:maxHeight="200dp"
			android:minWidth="220dp"
			android:minHeight="40dp"
			android:padding="8dp"
			android:textColor="@color/carbon" />
		
		<in.techware.lataxidriverapp.widgets.CustomButton
			android:id="@+id/btn_dialog_message_popup_ok"
			android:layout_width="wrap_content"
			android:layout_height="36dp"
			android:layout_gravity="center_vertical|end"
			android:background="@color/transparent"
			android:gravity="center"
			android:minWidth="64dp"
			android:minHeight="36dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:text="@string/btn_ok"
			android:textColor="@color/blue"
			android:textStyle="bold" />
	
	</LinearLayout>

</android.support.v7.widget.CardView>