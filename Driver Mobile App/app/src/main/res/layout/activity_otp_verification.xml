<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_otp_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.techware.lataxidriverapp.activity.OtpVerificationActivity">


    <LinearLayout
        style="@style/RegistrationParent">

        <LinearLayout
            style="@style/RegistrationTitleParent">

            <in.techware.lataxidriverapp.widgets.CustomTextView
                style="@style/RegistrationTitleLabel"
                android:paddingLeft="0dp"
                android:text="@string/label_what_is_your_name"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="80dp">

            <in.techware.lataxidriverapp.widgets.OTPEditText
                android:id="@+id/etxt_otp_verification_one"
                style="@style/OTPItem"/>

            <in.techware.lataxidriverapp.widgets.OTPEditText
                android:id="@+id/etxt_otp_verification_two"
                android:layout_marginLeft="5dp"
                style="@style/OTPItem"/>

            <in.techware.lataxidriverapp.widgets.OTPEditText
                android:id="@+id/etxt_otp_verification_three"
                android:layout_marginLeft="5dp"
                style="@style/OTPItem"/>

            <in.techware.lataxidriverapp.widgets.OTPEditText
                android:id="@+id/etxt_otp_verification_four"
                android:layout_marginLeft="5dp"
                style="@style/OTPItem"/>

            <in.techware.lataxidriverapp.widgets.OTPEditText
                android:id="@+id/etxt_otp_verification_five"
                android:layout_marginLeft="5dp"
                style="@style/OTPItem"/>

            <in.techware.lataxidriverapp.widgets.OTPEditText
                android:id="@+id/etxt_otp_verification_six"
                android:layout_marginLeft="5dp"
                style="@style/OTPItem"/>

        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_otp_verification_next"
        style="@style/RegistrationFAB"
        android:onClick="onOtpNextButtonClick"
        app:backgroundTint="@color/bg_fab"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_arrow"/>


    <in.techware.lataxidriverapp.widgets.CustomTextView
        android:id="@+id/txt_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="130dp"
        android:enabled="false"
        android:onClick="onOTPResendClick"
        android:textColor="#565656"
        android:textSize="18sp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:padding="10dp">

        <in.techware.lataxidriverapp.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/label_enter_the_4_digit_code"
            android:textSize="18sp"/>

        <in.techware.lataxidriverapp.widgets.CustomTextView
            android:id="@+id/txt_phone_code"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="45dp"
            android:textSize="18sp"/>

        <in.techware.lataxidriverapp.widgets.CustomTextView
            android:id="@+id/txt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="45dp"
            android:textSize="18sp"/>

    </RelativeLayout>

</FrameLayout>
