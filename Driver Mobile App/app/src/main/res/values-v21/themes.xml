<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="NoActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- Application theme. -->

    <!-- <style name="TransparentActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar"> -->
    <style name="TransparentActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- ActionBar styles -->
    <!-- <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"> -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- <item name="background">@color/pink_transparent_50</item> -->
        <item name="android:actionBarItemBackground">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/carbon</item>
        <item name="android:typeface">normal</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="MyActionBarPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/carbon</item>
    </style>

    <style name="SplashTheme" parent="NoActionBarTheme">
        <item name="actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme.DarkStatusBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="LoginTheme" parent="NoActionBarTheme">
        <item name="actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:actionBarPopupTheme">@style/MyActionBarPopup</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@drawable/bg_login</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="LoginTheme.DarkStatusBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>



    <style name="ThemeDialogCustom" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


</resources>