<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical">
	
	<ImageView
		android:id="@+id/iv_welcome_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:scaleType="centerCrop" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical">
		
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:layout_gravity="center"
			android:layout_marginTop="40dp"
			android:scaleType="centerInside"
			android:src="@drawable/ic_logo" />
		
		<in.techware.lataxicustomer.widgets.CustomTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="100dp"
			android:gravity="center"
			android:minHeight="50dp"
			android:text="@string/app_name"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/text_5" />
		
		<in.techware.lataxicustomer.widgets.CustomButton
			android:id="@+id/btn_welcome_login"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_marginTop="50dp"
			android:layout_marginRight="50dp"
			android:layout_marginBottom="20dp"
			android:background="@drawable/btn_click_green_dark_rectangle_with_semicircle_edge"
			android:onClick="onWelcomeLoginClick"
			android:text="@string/btn_sign_in"
			android:textAllCaps="false"
			android:textColor="@color/white" />
		
		<in.techware.lataxicustomer.widgets.CustomButton
			android:id="@+id/btn_welcome_register"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:layout_marginRight="50dp"
			android:layout_marginBottom="30dp"
			android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"
			android:onClick="onWelcomeSignUpClick"
			android:text="@string/btn_register"
			android:textAllCaps="false"
			android:textColor="@color/white" />
	
	
	</LinearLayout>
</FrameLayout>