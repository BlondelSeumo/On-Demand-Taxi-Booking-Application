<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NestedScrollBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.techware.lataxicustomer.activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_logo"/>

        <in.techware.lataxicustomer.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="50dp"
            android:layout_marginBottom="50dp"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_5"/>


        <in.techware.lataxicustomer.widgets.CustomEditText
            android:id="@+id/etxt_email_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/login_edit_text"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:hint="@string/hint_enter_your_email_address"
            android:inputType="textEmailAddress"/>

        <in.techware.lataxicustomer.widgets.CustomButton
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_click_green_dark_rectangle_with_semicircle_edge"
            android:onClick="onSubmitButtonClick"
            android:text="@string/btn_submit"
            android:textColor="@color/white"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>